                android:text="item7" />

            <TextView
                android:id="@+id/item8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="item8" />

            <TextView
                android:id="@+id/item9"
                android:layout_width="wrap_content"
